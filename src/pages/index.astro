---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const featuredArtworks = await getCollection('artwork', ({ data }) => data.featured);
const sortedFeatured = featuredArtworks.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout>
  <div class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>Contemporary Still Life</h1>
        <p>Exploring the interplay between shadow and revelation through intimate studies in the chiaroscuro tradition</p>
        <div class="hero-actions">
          <a href="/gallery" class="btn btn-primary">View Gallery</a>
          <a href="/contact" class="btn btn-secondary">Commissions</a>
        </div>
      </div>
    </div>
  </div>

  {sortedFeatured.length > 0 && (
    <section class="featured-works">
      <div class="container">
        <h2>Featured Works</h2>
        <div class="featured-grid">
          {sortedFeatured.map((artwork) => (
            <div class="artwork-card">
              <div class="artwork-image">
                <img src={artwork.data.image.src} alt={artwork.data.alt} />
                <div class="artwork-overlay">
                  <h3>{artwork.data.title}</h3>
                  <p>{artwork.data.year} â€¢ {artwork.data.medium}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <section class="intro">
    <div class="container">
      <div class="intro-content">
        <h2>About the Work</h2>
        <p>My paintings explore the quiet drama found in everyday objects, using dramatic lighting to reveal hidden narratives within still life compositions. Working in the tradition of Dutch masters, I create intimate studies that invite contemplation of presence, absence, and the passage of time.</p>
        <a href="/about" class="btn btn-outline">Learn More</a>
      </div>
    </div>
  </section>

  <style>
    .hero {
      background: linear-gradient(135deg, var(--bone) 0%, var(--warm-white) 100%);
      padding: 6rem 0;
      text-align: center;
    }

    .hero-content h1 {
      font-family: 'Crimson Pro', serif;
      font-size: 3.5rem;
      font-weight: 500;
      margin-bottom: 1rem;
      color: var(--charcoal-black);
    }

    .hero-content p {
      font-size: 1.2rem;
      color: var(--warm-grey);
      margin-bottom: 2rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .hero-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn {
      display: inline-block;
      padding: 0.75rem 2rem;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      border: 2px solid transparent;
    }

    .btn-primary {
      background: var(--deep-burgundy);
      color: var(--warm-white);
    }

    .btn-primary:hover {
      background: var(--charcoal-black);
    }

    .btn-secondary {
      background: transparent;
      color: var(--deep-burgundy);
      border-color: var(--deep-burgundy);
    }

    .btn-secondary:hover {
      background: var(--deep-burgundy);
      color: var(--warm-white);
    }

    .btn-outline {
      background: transparent;
      color: var(--charcoal-black);
      border-color: var(--charcoal-black);
    }

    .btn-outline:hover {
      background: var(--charcoal-black);
      color: var(--warm-white);
    }

    .featured-works {
      padding: 4rem 0;
    }

    .featured-works h2 {
      font-family: 'Crimson Pro', serif;
      font-size: 2.5rem;
      font-weight: 500;
      text-align: center;
      margin-bottom: 3rem;
      color: var(--charcoal-black);
    }

    .featured-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .artwork-card {
      background: white;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
    }

    .artwork-card:hover {
      transform: translateY(-5px);
    }

    .artwork-image {
      position: relative;
      aspect-ratio: 4/5;
      overflow: hidden;
    }

    .artwork-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .artwork-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
      padding: 2rem;
      color: white;
    }

    .artwork-overlay h3 {
      font-family: 'Crimson Pro', serif;
      font-size: 1.3rem;
      font-weight: 500;
      margin-bottom: 0.5rem;
    }

    .artwork-overlay p {
      font-size: 0.9rem;
      opacity: 0.9;
    }

    .intro {
      background: var(--bone);
      padding: 4rem 0;
    }

    .intro-content {
      text-align: center;
      max-width: 800px;
      margin: 0 auto;
    }

    .intro-content h2 {
      font-family: 'Crimson Pro', serif;
      font-size: 2.5rem;
      font-weight: 500;
      margin-bottom: 1.5rem;
      color: var(--charcoal-black);
    }

    .intro-content p {
      font-size: 1.1rem;
      color: var(--warm-grey);
      margin-bottom: 2rem;
      line-height: 1.8;
    }

    @media (max-width: 768px) {
      .hero {
        padding: 3rem 0;
      }

      .hero-content h1 {
        font-size: 2.5rem;
      }

      .hero-content p {
        font-size: 1rem;
      }

      .hero-actions {
        flex-direction: column;
        align-items: center;
      }

      .btn {
        width: 200px;
        text-align: center;
      }

      .featured-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>