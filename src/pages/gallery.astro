---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const artworks = await getCollection('artwork');
const sortedArtworks = artworks.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout title="Gallery">
  <div class="gallery-hero">
    <div class="container">
      <h1>Gallery</h1>
      <p>A collection of contemporary still life paintings exploring light, shadow, and the quiet drama of everyday objects</p>
    </div>
  </div>

  <section class="gallery">
    <div class="container">
      <div class="gallery-grid">
        {sortedArtworks.map((artwork) => (
          <div class="artwork-item">
            <div class="artwork-image">
              <img src={artwork.data.image.src} alt={artwork.data.alt} />
              <div class="artwork-watermark">IC</div>
            </div>
            <div class="artwork-info">
              <h3>{artwork.data.title}</h3>
              <p class="artwork-meta">{artwork.data.year} • {artwork.data.medium} • {artwork.data.dimensions}</p>
              <div class="artwork-description">
                <div set:html={artwork.body} />
              </div>
              <div class="artwork-actions">
                {artwork.data.price && artwork.data.available && (
                  <p class="artwork-price">{artwork.data.price}</p>
                )}
                {artwork.data.available ? (
                  <a href="/contact" class="btn btn-primary">Inquire</a>
                ) : (
                  <span class="sold-badge">Sold</span>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <style>
    .gallery-hero {
      background: var(--bone);
      padding: 4rem 0;
      text-align: center;
    }

    .gallery-hero h1 {
      font-family: 'Crimson Pro', serif;
      font-size: 3rem;
      font-weight: 500;
      margin-bottom: 1rem;
      color: var(--charcoal-black);
    }

    .gallery-hero p {
      font-size: 1.1rem;
      color: var(--warm-grey);
      max-width: 600px;
      margin: 0 auto;
    }

    .gallery {
      padding: 4rem 0;
    }

    .gallery-grid {
      display: grid;
      gap: 4rem;
    }

    .artwork-item {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: center;
      background: white;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .artwork-item:nth-child(even) {
      direction: rtl;
    }

    .artwork-item:nth-child(even) .artwork-info {
      direction: ltr;
    }

    .artwork-image {
      position: relative;
      aspect-ratio: 4/5;
      overflow: hidden;
    }

    .artwork-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .artwork-watermark {
      position: absolute;
      bottom: 1rem;
      right: 1rem;
      font-family: 'Crimson Pro', serif;
      font-size: 0.8rem;
      color: rgba(255,255,255,0.6);
      letter-spacing: 0.1em;
    }

    .artwork-info {
      padding: 2rem;
    }

    .artwork-info h3 {
      font-family: 'Crimson Pro', serif;
      font-size: 1.8rem;
      font-weight: 500;
      margin-bottom: 0.5rem;
      color: var(--charcoal-black);
    }

    .artwork-meta {
      color: var(--warm-grey);
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
    }

    .artwork-description {
      color: var(--charcoal-black);
      line-height: 1.7;
      margin-bottom: 2rem;
    }

    .artwork-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .artwork-price {
      font-weight: 500;
      color: var(--deep-burgundy);
      font-size: 1.1rem;
    }

    .sold-badge {
      background: var(--warm-grey);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      font-size: 0.9rem;
      font-weight: 500;
    }

    .btn {
      display: inline-block;
      padding: 0.75rem 2rem;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      border: 2px solid transparent;
    }

    .btn-primary {
      background: var(--deep-burgundy);
      color: var(--warm-white);
    }

    .btn-primary:hover {
      background: var(--charcoal-black);
    }

    @media (max-width: 768px) {
      .gallery-hero {
        padding: 2rem 0;
      }

      .gallery-hero h1 {
        font-size: 2rem;
      }

      .artwork-item {
        grid-template-columns: 1fr;
        gap: 0;
      }

      .artwork-item:nth-child(even) {
        direction: ltr;
      }

      .artwork-info {
        padding: 1.5rem;
      }

      .artwork-actions {
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
      }

      .btn {
        text-align: center;
      }
    }
  </style>
</BaseLayout>